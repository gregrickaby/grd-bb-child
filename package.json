{
	"name": "grd-bb-child",
	"version": "1.0.0",
	"description": "A custom child theme for Beaver Builder.",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/gregrickaby/grd-bb-child"
	},
	"keywords": [
		"beaver builder",
		"child theme",
		"wordpress"
	],
	"author": "Greg Rickaby",
	"license": "GPL-3.0",
	"bugs": {
		"url": "https://github.com/gregrickaby/grd-bb-child/issues"
	},
	"homepage": "https://github.com/gregrickaby/grd-bb-child#readme",
	"main": "src/js/app.js",
	"dependencies": {},
	"devDependencies": {
		"@wordpress/browserslist-config": "^2.6.0",
		"@wordpress/eslint-plugin": "^5.1.0",
		"@wordpress/prettier-config": "^0.2.0",
		"autoprefixer": "^9.7.6",
		"browser-sync": "^2.26.7",
		"browserlist": "^1.0.1",
		"cssnano": "^4.1.10",
		"eslint": "^6.8.0",
		"eslint-config-prettier": "^6.11.0",
		"eslint-plugin-prettier": "^3.1.3",
		"imagemin-cli": "^5.1.0",
		"mkdirp": "^1.0.4",
		"node-sass": "^4.14.0",
		"npm-run-all": "^4.1.5",
		"onchange": "^7.0.2",
		"postcss": "^7.0.28",
		"postcss-cli": "^7.1.1",
		"postcss-preset-env": "^6.7.0",
		"prettier": "^2.0.5",
		"prettier-config": "^1.0.0",
		"rimraf": "^3.0.2",
		"stylelint": "^13.3.3",
		"stylelint-config-recommended": "^3.0.0",
		"stylelint-config-recommended-scss": "^4.2.0",
		"stylelint-config-wordpress": "^16.0.0",
		"stylelint-order": "^4.0.0",
		"stylelint-scss": "^3.17.1",
		"svg-sprite-generator": "0.0.7",
		"svgo": "^1.3.2",
		"uglify-js": "^3.9.2",
		"wp-pot-cli": "^1.4.2"
	},
	"scripts": {
		"build": "run-s clean build:*",
		"build:images": "run-s imagemin icons",
		"build:js": "run-s uglify",
		"build:pot": "run-s pot",
		"build:scss": "run-s scss optimizecss",
		"clean": "rimraf dist/{css/*,js/*,images/*,languages/*}",
		"dev": "run-p serve watch:*",
		"icons": "svgo -f src/images/icons -o dist/images/icons && svg-sprite-generate -d dist/images/icons -o dist/images/icons/sprite.svg",
		"imagemin": "imagemin src/images/* -o dist/images",
		"lint": "run-s lint:js lint:scss lint:php",
		"lint:js": "./node_modules/.bin/eslint src/js || true",
		"lint:php": "./vendor/bin/phpcs -p -s -n . --standard=.phpcs.xml.dist --extensions=php || true || exit",
		"lint:scss": "./node_modules/.bin/stylelint 'src/scss/**/*.scss' --syntax scss || true",
		"optimizecss": "postcss dist/css/app.css -c postcss.config.js -o dist/css/app.css",
		"postinstall": "run-s build",
		"pot": "mkdirp dist/languages && wp-pot --src './*.php' --dest-file 'dist/languages/grd-bb-child.pot'",
		"scss": "node-sass src/scss/app.scss -o dist/css --source-map-root file://${PWD}/ --source-map-embed true",
		"serve": "browser-sync start --https --proxy 'https://gregrickaby.test' --no-open --files \"dist/css/*.css, dist/js/*.js, **/*.html, **/*.php, !node_modules/**/*.html\"",
		"uglify": "mkdirp dist/js -p && uglifyjs src/js/*.js -m -o dist/js/app.js && uglifyjs src/js/*.js -m -c -o dist/js/app.min.js",
		"watch": "run-p serve watch:*",
		"watch:css": "onchange \"src/scss\" -- run-p lint:scss build:scss",
		"watch:images": "onchange \"src/images\" -- run-p build:images",
		"watch:js": "onchange \"src/js\" -- run-p lint:js build:js",
		"watch:php": "onchange './*.php', './**/*.php' -- run-p lint:php"
	}
}
